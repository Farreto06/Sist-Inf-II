{
  "name": "lanchas-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de reservas de lanchas",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --setupFiles dotenv/config",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --setupFiles dotenv/config",
    "test:setup": "cross-env NODE_ENV=test node --experimental-vm-modules test/setup.js",
    "test:reset": "cross-env NODE_ENV=test node --experimental-vm-modules test/reset-db.js",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --setupFiles dotenv/config"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [".js"],
    "setupFiles": ["dotenv/config"],
    "testTimeout": 10000,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}